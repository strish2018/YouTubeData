<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:background="@color/colorCardListBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_view_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="18sp"
            android:text="Crime Title"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_title_text_view"
            android:layout_toRightOf="@+id/image_view_list"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_likes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Likes count: 512481"
                android:textColor="@color/colorText"
                android:shadowColor="@android:color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"/>

            <TextView
                android:id="@+id/item_likes_goal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="16sp"
                android:text="Goal: 515000"
                android:textColor="@color/colorText"
                android:shadowColor="@android:color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"/>
        </LinearLayout>

        <Button
            android:id="@+id/video_fragment_goal_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/set_goal"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_bg"
            />

        <Button
            android:id="@+id/video_fragment_origin_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/go_to_origin"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_bg"
            />

    </LinearLayout>

</LinearLayout>